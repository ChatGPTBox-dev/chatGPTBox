{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "overrides": [
    {
      "files": ["src/utils/__tests__/**/*.mjs", "*.test.mjs"],
      "env": {
        "jest": true,
        "node": true
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "ignorePatterns": ["build/**", "build.mjs", "src/utils/is-mobile.mjs"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
